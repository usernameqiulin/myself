{
  "name":        "bricks.js",
  "description": "A blazing fast masonry layout generator for fixed width elements.",

  "main":        "dist/bricks.js",
  "module":      "dist/bricks.module.js",
  "jsnext:main": "dist/bricks.module.js",

  "version": "1.8.0",
  "license": "MIT",

  "repository": "callmecavs/bricks.js",

  "author": {
    "name":  "Michael Cavalea",
    "email": "callmecavs@gmail.com",
    "url":   "http://callmecavs.com/"
  },

  "scripts": {
    "build":      "rollup -c",
    "dev":        "rollup -c -w -m inline",
    "lint":       "eslint src",
    "prebuild":   "rm -rf dist",
    "prepublish": "npm run test",
    "pretest":    "npm run build",
    "server":     "python -m SimpleHTTPServer 3000",
    "test":       "npm run lint"
  },

  "keywords": [
    "grid",
    "masonry",
    "layout",
    "packing"
  ],

  "dependencies": {
    "knot.js": "^1.1.5"
  },

  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.2.2",
    "eslint": "^3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "rollup": "^0.41.1",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2"
  }
}
