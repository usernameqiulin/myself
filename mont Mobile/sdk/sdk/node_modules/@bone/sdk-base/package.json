{
  "name": "@bone/sdk-base",
  "version": "0.1.55",
  "description": "可扩展、可适配的SDK基础架构，用于API的定义、实现、多平台兼容、扩展",
  "main": "lib",
  "scripts": {
    "test": "jest",
    "debugTest": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "build": "rm -rf lib; tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm test && npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*.test.+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "src/__tests__/index.RN.test.ts"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.alibaba-inc.com:bone/sdk-base.git"
  },
  "keywords": [
    "sdk"
  ],
  "author": "amos",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "typescript": "^2.7.2",
    "jest-react-native": "^18.0.0"
  },
  "dependencies": {
    "@bone/bone-logger-naappender": "^1.0.0",
    "@bone/bone-mobile": "^2.2.0",
    "@bone/channel": "^0.1.13",
    "@bone/event-emitter": "^0.1.7",
    "@bone/iot-gateway": "^2.0.0",
    "@bone/koa-compose-es5": "^1.0.0",
    "@bone/logger": "^0.2.2",
    "axios": "^0.18.0",
    "invariant": "^2.2.4",
    "js-cookie": "^2.2.0",
    "react-native": "0.41.2",
    "rxjs": "^5.5.7",
    "timer-promise": "0.0.2",
    "type-detect": "^4.0.8",
    "whatwg-fetch": "^2.0.3"
  },
  "bnpm": {
    "mode": "yarn"
  }
}
